<section id="jobs">
  <% @jobs.each do |job| %>
    <% if !job.expired? %>
    <div class="jobs">
      <h3><%= job.title %></h1>
      <p><%= job.location %></p>
      <p><%= job.company.name %></p>
      <p><%= job.category.name %></p>
      <% if job.recent? %>
        <p><em>Novidade</em></p>
      <% end %>
      <%= link_to 'Ver mais', job %>
    </div>
    <% end %>
  <% end %>
</section>
<aside>

  <% @companies.each do |company| %>
    <% if company.premium? %>
      <p><em>Empresa Premium</em></p>
    <% end %>

    <%= link_to company.name, company %>
  <% end %>
</aside>
<aside>
  <% @categories.each do |category| %>
    <%= link_to category.name, category %>
  <% end %>
</aside>
<aside>
  <% Job::HIRING_OPTIONS.each do |hiring_type| %>
    <%= link_to hiring_type, hiring_type_path(hiring_type) %>
  <% end %>
</aside>
