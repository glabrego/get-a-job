<div id="main-container" class="container">
  <div class="row">
    <div id="content" class="col-md-8">

      <div id="jobs">
        <% @jobs.each do |job| %>
        <% if !job.expired? %>
        <div class="jobs">
          <h3><%= job.title %></h1>
            <p><%= job.location %></p>
            <p><%= job.company.name %></p>
            <p><%= job.category.name %></p>
            <% if job.recent? %>
            <p><em>Novidade</em></p>
            <% end %>
            <%= link_to 'Ver mais', job %>
          </div>
          <% end %>
          <% end %>
        </div>

    </div>
    <div id="sidebar" class="col-md-4">
      <div id="companies" class="companies">

        <h3>Sidemenu</h2>

        <h4>Companies</h3>
        <% @companies.each do |company| %>
          <% if company.premium? %>
            <p><em>Empresa Premium</em></p>
          <% end %>

          <%= link_to company.name, company, class: 'btn btn-link'%>
        <% end %>

      </div>

      <h4> Categories</h3>
      <div id="categories" class="categories">

        <% @categories.each do |category| %>
          <%= link_to category.name, category, class: 'btn btn-link' %>
        <% end %>

      </div>

      <h4> Hiring Type</h3>
      <div id="hiring-type" class="hiring-type">
        <% Job::HIRING_OPTIONS.each do |hiring_type| %>
          <%= link_to hiring_type, hiring_type_path(hiring_type), class: 'btn btn-link' %><br>
        <% end %>
      </div>

    </div>
  </div>
</div>
