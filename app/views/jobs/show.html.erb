<h2><%= @job.title %></h2>
<hr>
<% if @job.expired? %>
<h2>Vaga Expirada!</h2>
<% end %>
<p><strong>Categoria:</strong> <%= @job.category.name %></p>
<p><strong>Empresa:</strong> <%= @job.company.name%></p>
<p><strong>Tipo da Contratação:</strong> <%= @job.hiring_type %></p>
<p><strong>Descrição Completa:</strong> <%= @job.description %></p>
<p><strong>Localização:</strong> <%= @job.location %></p>
<% if @job.featured? %>
  <strong>Vaga em Destaque</strong>
<% end %>
