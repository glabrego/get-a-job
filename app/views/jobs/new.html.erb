<%= form_for @job do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.label :company_id %>
  <%= f.collection_select :company_id, @companies, :id, :name  %>
  <%= f.label :category %>
  <%= f.text_field :category %>
  <%= f.label :featured  %>
  <%= f.check_box :featured  %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit 'Criar Vaga' %>
<% end %>
