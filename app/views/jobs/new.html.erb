<%= form_for @job do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.label :company %>
  <%= f.text_field :company %>
  <%= f.label :category %>
  <%= f.text_field :category %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.check_box :featured %>
  <%= f.label :featured %>
  <%= f.submit 'Criar Vaga' %>
<% end %>
