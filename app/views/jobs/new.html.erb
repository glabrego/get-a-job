<% if @job.errors.any? %>
  <div class="alert alert-danger">
    <h3><%= pluralize(@job.errors.count, "error") %> prohibited this post from being saved:</h3>
    <ul>
    <% @job.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @job do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.label :company_id %>
  <%= f.collection_select :company_id, @companies, :id, :name %>
  <%= f.label :category %>
  <%= f.text_field :category %>
  <%= f.label :featured  %>
  <%= f.check_box :featured  %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit 'Criar Vaga' %>
<% end %>
